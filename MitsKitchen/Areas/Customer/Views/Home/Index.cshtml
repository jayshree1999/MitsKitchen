@using MitsKitchen.Models;
@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    <br /><br />
    <div class="row">
    @foreach(var Product in Model)
        {
            <div class="col-4">
                <div class="card mb-4">
                     <div class="card-header">
                        <h4 class"my-0 font-weight-normal">
                            <label style="font-size:23px; color:steelblue">@Product.ProductName</label>
                        </h4>
                </div>
                <img src="~/@Product.Image"  alt="card image" class="card-img-top" style="height:300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                         
                              <div class="btn-group">
                                    <label style="font-size:20px; color:pink;"><b>Price : @Product.ProductPrice</b></label>
                              </div>
                              <a asp-action="Details" asp-controller="Home" asp-route-id="@Product.ProductId" class="btn btn-primary pull-right btn-outline-info"> Details </a>
                        
                    </div>
                </div>
            </div>
 
                </div>
            
        }
    </div>
}